

const int signalPin = 2;  // Replace with the actual pin connected to the 5V signal
const int relayPin = 3;   // Replace with the actual pin connected to the relay
bool relayActivated = false;

void setup() {
  pinMode(signalPin, INPUT);
  pinMode(relayPin, OUTPUT);
}

void loop() {
  if (digitalRead(signalPin) == HIGH && !relayActivated) {
    digitalWrite(relayPin, HIGH);
    delay(5000);
    digitalWrite(relayPin, LOW);
    relayActivated = true;  // Set the flag to indicate relay activation
  }
}

